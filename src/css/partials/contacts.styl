.contacts-bg
  position relative
  > .text
    @extend .container
  > .map
    height 400px
    @media (max-width 800px)
      height 360px

.contacts-block
  > .title
    padding 80px 0 40px
    text-align center
    @media (max-width 800px)
      padding 30px 0 40px
    > h1
      display inline-block
      padding 0 18px
      z-index 2
      background $color-white
  > .text
    display block

.contacts-text
  width 660px
  margin 0 auto 50px
  text-align center
  @media (max-width 800px)
    width auto
  > .title
    font-weight 700
    font-size 20px
    fontRobotoCondensed()
    text-transform uppercase
    @media (max-width 700px)
      font-size 18px
  > .text
    font-weight 300
    font-size 20px
    margin 0 0 20px
    @media (max-width 700px)
      font-size 16px

.contact-phone
  color $color-dark
  border-bottom none
  &:hover
    color $color-dark
    border-bottom none