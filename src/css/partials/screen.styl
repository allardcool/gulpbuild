.screen1-block
  height 650px
  //background url(../img/header-bg.jpg) no-repeat 50% 50%
  background-size cover
  position relative
  @media (max-width 1180px)
    height 500px
  @media (max-width 910px)
    height 450px
  @media (max-width 800px)
    height 400px
  @media (max-width 600px)
    height 300px
  @media (max-width 460px)
    height 250px
  @media (max-width 400px)
    height 200px
  &.-video
    overflow hidden
    //background url(../storage/slider_video.jpg) no-repeat 50% 43%
    background-size 100% auto
  > .video
    absolute top -175px left 0
    z-index 0
    size 100% 1000px
    display inline-block
    line-height 1000px
    @media (max-width 1180px)
      top -250px
    @media (max-width 910px)
      top -275px
    @media (max-width 800px)
      top -300px
    @media (max-width 730px)
      display none
    > video
      display inline-block
      vertical-align middle
      width 100%
      height auto
  > .video-sep
    //background url(../img/screen-video-filter.png) repeat
    absolute top 0 left 0
    size 100%
    @media (max-width 730px)
      display none

.no-animation .screen1-block.-video
  //background url(../img/header-bg.jpg) no-repeat 50% 50%
  background-size cover

.screen1-zakaz
  position relative
  z-index 3
  padding-top 300px
  @media (max-width 1180px)
    padding-top 162px
  @media (max-width 800px)
    padding-top 115px
  @media (max-width 600px)
    padding-top 75px
  @media (max-width 460px)
    padding-top 55px
  @media (max-width 460px)
    padding-top 30px
  > .subtitle
    fontRobotoCondensed()
    font-size 26px
    font-weight 700
    color $color-white
    text-transform uppercase
    letter-spacing 0.01em
    padding 30px 0 5px
    text-shadow 0 0 6px rgba(1, 1, 1, 1)
    @media (max-width 1180px)
      padding 25px 0 5px
      font-size 24px
    @media (max-width 910px)
      padding 25px 0 5px
      font-size 22px
    @media (max-width 800px)
      padding 10px 0 0
      font-size 22px
    @media (max-width 600px)
      padding 15px 0 0
      font-size 18px
    @media (max-width 460px)
      padding 10px 0 0
      font-size 16px
    @media (max-width 400px)
      padding 5px 0 0
      font-size 16px
  > .title
    fontRobotoCondensed()
    font-size 56px
    font-weight 700
    color $color-white
    text-transform uppercase
    line-height 1.1
    text-shadow 0 0 6px rgba(1, 1, 1, 1)
    @media (max-width $screen-lg)
      font-size 50px
    @media (max-width 800px)
      font-size 46px
    @media (max-width 600px)
      font-size 34px
    @media (max-width 460px)
      font-size 30px
    @media (max-width 400px)
      font-size 24px
  > .button
    margin-top 30px
    @media (max-width 600px)
      margin-top 20px
    @media (max-width 460px)
      margin-top 10px
    @media (max-width 400px)
      margin-top 8px