.order-bg
  background $color-silver
  @media (max-width $screen-lg)
    background $color-silver

.order-block
  @extend .container
  padding-top 85px
  padding-bottom 65px
  color $color-black
  > .title
    margin-bottom 20px
    letter-spacing 0.03em
    > h1
      color $color-green
  > .subtitle
    font-size 20px
    line-height 1.2
    font-weight 300
    padding-right 220px
    margin-bottom 30px
    @media (max-width $screen-lg)
      padding-right 0
      margin-bottom 20px
    @media (max-width 800px)
      font-size 18px
    @media (max-width 600px)
      font-size 16px
  > .infotext
    font-size 16px
    line-height 1.3
    font-weight 300
    padding 10px 0 0
    @media (max-width 600px)
      padding 5px 0 0
  > .posttext
    font-size 18px
    line-height 1.3
    font-weight 300
    padding 10px 340px 0 0
    @media (max-width $screen-lg)
      padding 10px 0 0
    @media (max-width 600px)
      padding 5px 0 0
      font-size 16px
  > .form
    display block
    clearfix()
  @media (max-width $screen-lg)
    padding-top 60px
    padding-bottom 60px

.order-form
  z-index 2

.order-item
  > .item
    margin-bottom 20px
    @media (max-width 600px)
      margin-bottom 15px

.order-desc
  margin 10px 0 0
  padding 0 11px 0 0
  font-size 15px
  @media (max-width $screen-lg)
    padding 0

.order-airlink
  display none
  &.-show
    display inline-block

.order-price
  display none
  &.-show
    display block
  > .text
    font-size 15px
    line-height 1.1
  > .price
    font-size 32px
    fontRobotoCondensed()
    font-weight 700
    color $color-green
    line-height 1.3

.order-sertif
  absolute top 400px right 0
  z-index 1
  size 319px 253px
  > img
    max-width 100%
    height auto
  @media (max-width $screen-lg)
    display none

.order-info
  min-height 100px

.checkbox-block
  > label
    line-height 1