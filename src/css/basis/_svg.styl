@font-face
  font-family 'icomoon'
  font-weight normal
  font-style normal
  src url('../fonts/icomoon.eot')
  src url('../fonts/icomoon.eot#iefix') format('embedded-opentype'), url('../fonts/icomoon.ttf') format('truetype'), url('../fonts/icomoon.woff') format('woff'), url('../fonts/icomoon.svg#icomoon') format('svg')

fontIconmoon(icon)
  font-family 'icomoon' !important
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  display inline-block
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  &:before
    if icon == 'airplane2left'
      content '\e900'
    else if icon == 'airplane2right'
      content '\e901'
    else if icon == 'airplaneleft'
      content '\e902'
    else if icon == 'airplaneright'
      content '\e903'
    else if icon == 'arrowleft'
      content '\e904'
    else if icon == 'arrowright'
      content '\e905'
    else if icon == 'car'
      content '\e906'
    else if icon == 'close'
      content '\e907'
    else if icon == 'gift'
      content '\e908'
    else if icon == 'phone'
      content '\e909'
    else if icon == 'pilot'
      content '\e90a'
    else if icon == 'ruble'
      content '\e90b'
    else if icon == 'selectarr'
      content '\e90c'
    else if icon == 'sertificate'
      content '\e90d'
    else if icon == 'mans'
      content '\e90e'
    else if icon == 'menu'
      content '\e90f'