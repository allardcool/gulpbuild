/* color */
$color-black  = #000000
$color-dark   = #111111
$color-gray   = #717171
$color-red    = #fb4a1b
$color-green  = #7cb633
$color-cyan   = #61c4e1
$color-silver = #f5f5f5
$color-white  = #ffffff

/*! style */
$screen-lg = 1040px
$screen-md = 860px
$screen-lt = 780px
$screen-sm = 640px
$screen-xs = 280px

$grid-columns = 12
$grid-gutter-width = 20px

$speed-anim = 0.2s

$body-bg = $color-white

$font-family-base = 'Roboto', sans-serif
$font-size-base = 16px
$line-height-base = 1.5
$font-weight-base = 400

$text-color = $color-dark

$link-color = $color-gray
$link-decoration = none
$link-hover-color = $color-green
$link-hover-decoration = none

$font-roboto-condensed = 'Roboto Condensed', sans-serif

fontRobotoCondensed()
  font-family $font-roboto-condensed


