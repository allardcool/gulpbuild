input
  color inherit
  font inherit
  margin 0
  outline none
  line-height normal
  &::-moz-focus-inner
    border 0
    padding 0

html input[type='button'],
input[type='reset'],
input[type='submit']
  cursor pointer
  -webkit-appearance button

.input-element
  border 1px solid #e9e9e9
  font-size 16px
  font-weight 300
  width 100%
  min-width 200px
  border-radius 4px
  padding 14px 20px
  line-height 20px
  color $color-dark
  box-shadow none
  transition all $speed-anim ease-in-out
  &:focus
    border 1px solid $color-green
    padding 14px 20px
    font-size 16px
    color $color-dark
    line-height 20px
    box-shadow none
  &.-error
    border 1px solid $color-red
    color $color-red
